@model EcommerceNovo.Models.Produto
<link href="~/css/cadastrarproduto.css" rel="stylesheet" />

<div class="container" style="max-width: 500px; margin-top: 20px;">
    <h2>Cadastro de Máquina Ferrari</h2>
    <form asp-action="CadastrarProduto">
        <div asp-validation-summary="ModelOnly" class="text-muted" style="color: #888;"></div>

        <label asp-for="Nome">Nome da Máquina</label>
        <input asp-for="Nome" class="form-control mb-2" placeholder="Ex: Ferrari SF90 Stradale" />
        <span asp-validation-for="Nome" style="color: #888;"></span>

        <label asp-for="Descricao">Descrição Técnica</label>
        <textarea asp-for="Descricao" class="form-control mb-2" rows="3"></textarea>
        <span asp-validation-for="Descricao" style="color: #888;"></span>

        <label asp-for="Quantidade">Quantidade em Estoque</label>
        <input asp-for="Quantidade" class="form-control mb-2" type="number" />
        <span asp-validation-for="Quantidade" style="color: #888;"></span>

        <label asp-for="Preco">Preço (R$)</label>
        <input asp-for="Preco" class="form-control mb-3" type="number" step="0.01" />
        <span asp-validation-for="Preco" style="color: #888;"></span>

        <button type="submit" class="btn btn-secondary w-100">Cadastrar Máquina</button>
    </form>

    <div class="text-center mt-3">
        <a asp-action="Index" class="text-decoration-none">← Voltar para lista</a>
    </div>
</div>
