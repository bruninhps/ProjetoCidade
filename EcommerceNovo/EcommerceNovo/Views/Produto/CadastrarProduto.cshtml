@model EcommerceNovo.Models.Produto
<link href="~/css/cadastrarproduto.css" rel="stylesheet" />

<div class="container">
    <h1>CADASTRAR NOVA MÁQUINA FERRARI</h1>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="CadastrarProduto">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Nome" class="control-label">NOME DA MÁQUINA</label>
                    <input asp-for="Nome" class="form-control" placeholder="Ex: Ferrari SF90 Stradale" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Descricao" class="control-label">DESCRIÇÃO TÉCNICA</label>
                    <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Quantidade" class="control-label">QUANTIDADE EM ESTOQUE</label>
                    <input asp-for="Quantidade" class="form-control" type="number" />
                    <span asp-validation-for="Quantidade" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Preco" class="control-label">PREÇO (R$)</label>
                    <input asp-for="Preco" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="CADASTRAR MÁQUINA" class="btn btn-primary" />
                </div>
            </form>

            <div class="text-center">
                <a asp-action="Index" class="back-link">← VOLTAR PARA LISTA</a>
            </div>
        </div>
    </div>
</div>