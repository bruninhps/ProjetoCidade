@model EcommerceNovo.Models.Produto
<link href="~/css/editarproduto.css" rel="stylesheet" />

<div class="container" style="max-width: 500px; margin-top: 20px;">
    <h2>Editar</h2>

    <form asp-action="EditarProduto" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-muted" style="color: #888;"></div>

        <input type="hidden" asp-for="Id" />

        <label asp-for="Nome">Nome</label>
        <input asp-for="Nome" class="form-control mb-2" />
        <span asp-validation-for="Nome" style="color: #888;"></span>

        <label asp-for="Descricao">Descrição</label>
        <input asp-for="Descricao" class="form-control mb-2" />
        <span asp-validation-for="Descricao" style="color: #888;"></span>

        <label asp-for="Quantidade">Quantidade</label>
        <input asp-for="Quantidade" class="form-control mb-2" />
        <span asp-validation-for="Quantidade" style="color: #888;"></span>

        <label asp-for="Preco">Preço (R$)</label>
        <input asp-for="Preco" class="form-control mb-3" />
        <span asp-validation-for="Preco" style="color: #888;"></span>

        <button type="submit" class="btn btn-secondary w-100">Salvar Alterações</button>
    </form>

    <div class="text-center mt-3">
        <a asp-action="Index" class="text-decoration-none">← Voltar</a>
    </div>
</div>
